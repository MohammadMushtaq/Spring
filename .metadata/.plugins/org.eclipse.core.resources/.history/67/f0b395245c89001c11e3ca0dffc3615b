package com.xworkz.gold.util;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.Id;
import javax.persistence.Table;

import lombok.Data;
import lombok.NoArgsConstructor;

@Entity
@Table (name="gold_deatils")
public class Gold {
	@Id
	@Column(name="g_id")
	private int id;
	@Column(name="g_carrot")
	private Double Carraot;
	@Column(name="g_mix")
	private String mixQuantiy;
	@Column(name="g_purity")
	private double purity;
	@Column(name="g_gold")
	private boolean gold;
	@Column(name="g_price")
	private double goldPriceFor10Gm;
	
	public Gold() {
		// TODO Auto-generated constructor stub
	}
	

	public Gold(int id, Double carraot, String mixQuantiy, double purity, boolean gold,double goldPriceFor10Gm) {
		super();
		this.id = id;
		Carraot = carraot;
		this.mixQuantiy = mixQuantiy;
		this.purity = purity;
		this.gold = gold;
		this.goldPriceFor10Gm=goldPriceFor10Gm;
	}
	


	public double getGoldPriceFor10Gm() {
		return goldPriceFor10Gm;
	}


	public void setGoldPriceFor10Gm(double goldPriceFor10Gm) {
		this.goldPriceFor10Gm = goldPriceFor10Gm;
	}


	@Override
	public String toString() {
		return "Gold [id=" + id + ", Carraot=" + Carraot + ", mixQuantiy=" + mixQuantiy + ", purity=" + purity
				+ ", gold=" + gold + ",goldPriceFor10Gm="+goldPriceFor10Gm+"]";
	}
	


	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + ((Carraot == null) ? 0 : Carraot.hashCode());
		result = prime * result + (gold ? 1231 : 1237);
		result = prime * result + id;
		result = prime * result + ((mixQuantiy == null) ? 0 : mixQuantiy.hashCode());
		long temp;
		temp = Double.doubleToLongBits(purity);
		result = prime * result + (int) (temp ^ (temp >>> 32));
		return result;
	}


	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Gold other = (Gold) obj;
		if (Carraot == null) {
			if (other.Carraot != null)
				return false;
		} else if (!Carraot.equals(other.Carraot))
			return false;
		if (gold != other.gold)
			return false;
		if (id != other.id)
			return false;
		if (mixQuantiy == null) {
			if (other.mixQuantiy != null)
				return false;
		} else if (!mixQuantiy.equals(other.mixQuantiy))
			return false;
		if (Double.doubleToLongBits(purity) != Double.doubleToLongBits(other.purity))
			return false;
		return true;
	}


	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public Double getCarraot() {
		return Carraot;
	}

	public void setCarraot(Double carraot) {
		Carraot = carraot;
	}

	public String getMixQuantiy() {
		return mixQuantiy;
	}

	public void setMixQuantiy(String mixQuantiy) {
		this.mixQuantiy = mixQuantiy;
	}

	public double getPurity() {
		return purity;
	}

	public void setPurity(double purity) {
		this.purity = purity;
	}

	public boolean isGold() {
		return gold;
	}

	public void setGold(boolean gold) {
		this.gold = gold;
	}

}
